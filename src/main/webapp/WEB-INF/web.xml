<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.mustafinsa.eshop.Controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductAllController</servlet-name>
        <servlet-class>com.mustafinsa.eshop.Controller.ProductAllController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductAllController</servlet-name>
        <url-pattern>/product.all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemCartController</servlet-name>
        <servlet-class>com.mustafinsa.eshop.Controller.ItemCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemCartController</servlet-name>
        <url-pattern>/itemcart</url-pattern>
    </servlet-mapping>

</web-app>